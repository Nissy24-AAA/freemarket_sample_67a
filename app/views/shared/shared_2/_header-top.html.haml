.header
  .header__box
    .header__box__title
    = link_to image_tag("logo/logo.png", width: "150px", height: "40px"), root_path
    = form_with(url: search_products_path, local: true, method: :get, class: "header__box__search") do |form|
      = form.text_field :keyword, class: 'header__box__search__form', placeholder: 'キーワードから探す'
      = form.submit "", class: "header__box__search__btn"
  .header__box2
    .header__box2__tab
      = render partial: 'products/category-drop'
      = render partial: "products/brand-drop"
    .header__box2__info
      - if user_signed_in?
        = link_to "いいね!一覧", class: "header__box2__info__like"
        = link_to "マイページ", mypage_index_path, class: "header__box2__info__mypage"
      - else
        = link_to "ログイン", new_user_session_path, class: "header__box2__info__like"
        = link_to "新規会員登録", new_signup_path, class: "header__box2__info__mypage"
