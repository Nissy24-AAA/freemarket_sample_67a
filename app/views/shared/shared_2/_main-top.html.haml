.content5
  .content5__main
    .content5__main__title
      ピックアップカテゴリー
      新規投稿商品
    .content5__main__picture
      .content5__main__picture__image
        - @products.each do |product|
          = link_to product_path(product), data: {"turbolinks" => false} do
            .content5__main1__picture__image__content
              -if product.images[0].croped_image.blank?
                = image_tag product.images[0].src.url, height: "150px", width: "150px"
              -else 
                = image_tag product.images[0].croped_image, height: "150px", width: "150px"
              .content5__main1__picture__image__form  
                .content5__main1__picture__image__form__name

                  = product.name
                .content5__main__picture__image__form__box
                  .content5__main__picture__image__form__box__price 
                    ¥
                    = product.price
                  .content5__main1__picture__image__form__box__like
                    %i.fa.fa-heart.redheart
                    = product.likes.length
              -if product.buyer_id.present? 
                .products-box_photo__sold
                  .products-box_photo__sold__inner
                    SOLD